<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
    <div class = "centercss">
    <h1>Tweet</h1>
      <%= link_to "Tweet", new_tweet_path, class: 'btn btn-default' %>
     </div>
      <br>
      <br>
      <br>
      <br>
      <br>
      <br>
    <% @tweets.each do |tweet| %>
    <div class="row">
      <div class =gaiyou>
      <p><%= tweet.content %></p>
      <%= link_to "EDIT", edit_tweet_path(tweet.id), class: 'btn btn-default btn-sm btn-success' %>
      <%= link_to "DELETE", tweet_path(tweet.id), method: :delete, data: { confirm: '本当に削除していいですか？'}, class: 'btn btn-default btn-sm btn btn-danger' %>
      </div>
    </div>
    <% end %>
  </div>
</div>
